{
  "name": "perfectworks-cli",
  "description": "CLI tool for processing PDF and HTML files to make them accessible via the PerfectWorks API",
  "version": "0.0.8",
  "author": "PerfectWorks",
  "bin": {
    "perfectworks-cli": "./bin/run.js"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "version:patch": "npm version patch && npm run version",
    "version:minor": "npm version minor && npm run version",
    "version:major": "npm version major && npm run version"
  },
  "bugs": "https://github.com/TikiLIVEI/perfectworks-cli/issues",
  "dependencies": {
    "@oclif/core": "^4",
    "@oclif/plugin-autocomplete": "^3.2.33",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-not-found": "^3.2.60",
    "@oclif/plugin-update": "^4.7.1",
    "@oclif/plugin-version": "^2.2.31",
    "axios": "^1.10.0",
    "cli-ux": "^6.0.9",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/chai": "^4",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "chai": "^4",
    "eslint": "^9",
    "eslint-config-oclif": "^6",
    "eslint-config-prettier": "^10",
    "mocha": "^10",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "./bin",
    "./dist",
    "./theme.json",
    "./oclif.manifest.json"
  ],
  "homepage": "https://github.com/TikiLIVEI/perfectworks-cli",
  "keywords": [
    "cli",
    "accessibility",
    "pdf",
    "html",
    "perfectworks"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "perfectworks-cli",
    "dirname": "perfectworks-cli",
    "commands": "./dist/commands",
    "hooks": {
      "prerun": "./dist/hooks/prerun"
    },
    "theme": "theme.json",
    "plugins": [
       "@oclif/plugin-*"
    ],
    "topicSeparator": " ",
    "topics": {
      "accessibility": {
        "description": "Process files to make them accessible"
      }
    }
  },
  "repository": "TikiLIVEI/perfectworks-cli",
  "types": "dist/index.d.ts"
}
